<main class="edit">
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            <form class="create-form" method="POST">
                <input type="text" name="name" value="{{animal.name}}" id="name" placeholder="Name" value="Show" />
                <input type="text" name="years" value="{{animal.years}}" id="years" placeholder="Years" value="1" />
                <input type="text" name="kind" value="{{animal.kind}}" id="kind" placeholder="Kind" value="Lion" />
                <input type="text" name="image" value="{{animal.image}}" id="animal-img" placeholder="Image url" value="" />
                <input type="text" name="need" value="{{animal.need}}" id="needs-of" placeholder="Needs of" value="Medicine" />
                <input type="text" name="location" value="{{animal.location}}" id="location" placeholder="Location" value="San Diego Zoo" />
                <textarea id="description" placeholder="Description..." name="description">{{animal.description}}</textarea>

                <button type="submit">Edit</button>
            </form>
        </div>
    </section>
</main>
</div>