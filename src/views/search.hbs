<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Location</h2>

        <form class="search-wrapper cf" action="/search" method="GET">
            <input id="#search-input" type="text" name="search" value="{{search}}" placeholder="Search here..."
                required />
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#if animals}}
            <ul class="card-wrapper">
                {{#each animals}}
                {{>animalCard}}
                {{/each}}
            </ul>
            {{else}}
            <div id="no-post">
                <h2>There are no results found.</h2>
            </div>
            {{/if}}

        </div>
    </section>
</main>